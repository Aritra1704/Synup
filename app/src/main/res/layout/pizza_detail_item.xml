<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCrust"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/m_8"
    android:layout_marginTop="@dimen/m_10"
    android:elevation="@dimen/m_5"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/m_20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_pizza_detail"
            android:textSize="@dimen/t_20"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/m_20"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPizzaCrust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/m_10"
                android:hint="Crust"
                android:textSize="@dimen/t_18"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvPizzaSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/m_10"
                android:hint="Size"
                android:textSize="@dimen/t_18"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvPizzaSauce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/m_10"
                android:hint="Sauce"
                android:textSize="@dimen/t_18"
                android:textStyle="italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPizzaPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m_20"
            android:hint="Price"
            android:textSize="@dimen/t_18"
            android:textStyle="italic" />
    </LinearLayout>
</androidx.cardview.widget.CardView>